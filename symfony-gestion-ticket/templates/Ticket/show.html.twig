{% extends 'base.html.twig' %}

{% block title %}Ticket #{{ ticket.id }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">
                        <i class="fas fa-ticket-alt"></i> Ticket #{{ ticket.id }}
                    </h2>
                    <div>
                        <span class="badge bg-{{ ticket.status == 'Nouveau' ? 'secondary' : (ticket.status == 'Ouvert' ? 'warning' : (ticket.status == 'Résolu' ? 'success' : 'dark')) }}">
                            {{ ticket.status }}
                        </span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="fas fa-envelope"></i> Auteur:</strong><br>
                        {{ ticket.author }}
                    </div>
                    <div class="col-md-6">
                        <strong><i class="fas fa-calendar"></i> Date d'ouverture:</strong><br>
                        {{ ticket.openDate|date('d/m/Y H:i') }}
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="fas fa-tag"></i> Catégorie:</strong><br>
                        <span class="badge bg-info">{{ ticket.category }}</span>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="fas fa-user"></i> Responsable:</strong><br>
                        {% if ticket.responsible %}
                            {{ ticket.responsible.name }}
                        {% else %}
                            <span class="text-muted">Non assigné</span>
                        {% endif %}
                    </div>
                </div>
                
                {% if ticket.closeDate %}
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="fas fa-calendar-times"></i> Date de clôture:</strong><br>
                        {{ ticket.closeDate|date('d/m/Y H:i') }}
                    </div>
                </div>
                {% endif %}
                
                <div class="mb-3">
                    <strong><i class="fas fa-align-left"></i> Description:</strong>
                    <div class="card mt-2">
                        <div class="card-body">
                            {{ ticket.description }}
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <a href="{{ path('app_tickets') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}