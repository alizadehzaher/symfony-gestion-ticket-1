{# templates/ticket/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Tickets{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-tickets"></i> Liste des Tickets
    </h1>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Auteur</th>
                        <th>Description</th>
                        <th>Catégorie</th>
                        <th>Statut</th>
                        <th>Date d'ouverture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ticket in tickets %}
                    <tr>
                        <td>#{{ ticket.id }}</td>
                        <td>{{ ticket.author }}</td>
                        <td>{{ ticket.description|length > 50 ? ticket.description|slice(0, 50) ~ '...' : ticket.description }}</td>
                        <td>
                            <span class="badge bg-info">{{ ticket.category }}</span>
                        </td>
                        <td>
                            <span class="badge 
                                {% if ticket.status == 'Nouveau' %}bg-secondary
                                {% elseif ticket.status == 'Ouvert' %}bg-warning
                                {% elseif ticket.status == 'Résolu' %}bg-success
                                {% else %}bg-dark{% endif %}">
                                {{ ticket.status }}
                            </span>
                        </td>
                        <td>{{ ticket.openDate|date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('app_ticket_show', {'id': ticket.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn btn-sm btn-outline-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="7" class="text-center">Aucun ticket trouvé</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}